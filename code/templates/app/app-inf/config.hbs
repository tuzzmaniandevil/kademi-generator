(function (g) {

    function config() {
        var _self = this;

        _self.APP_ID = '{{appName}}';
        _self.REPO_NAME = _self.APP_ID + '_repo';
        {{#if jsondb}}
        _self.DB_NAME = _self.APP_ID + 'db';
        _self.DB_TITLE = '{{sentenceCase appName}} DB';
        {{/if}}

        _self.RECORD_NAMES = {
            EXAMPLE: function (name) {
                return 'example_' + name;
            }
        };

        _self.RECORD_TYPES = {
            EXAMPLE: 'EXAMPLE'
        };

        _self.RECORD_TEMPLATES = {
            EXAMPLE: function () {
                return {};
            }
        };
    }

    g._config = new config();
})(this);